<header id="layout-header">
    <nav>
        <div class="mini-logo">
            <a href="/">
                <div id ="logo-img">
                    <img src="/assets/img/logo-img.png" alt="">
                </div>
            </a>
                
        </div>
    
        <div class="auth-links">
            <ul>
                <% if (locals.user){ %>
                <li>
                    <a href="/users/sign-out">Sign Out</a>
                    <a href="/users/profile/<%= locals.user.userId %>"><i class="far fa-user"></i></a>
                </li>
                <% }else{ %>
                <li>
                    <a href="/users/sign-in">Sign In</a>
                </li>
                <li>
                    <a href="/users/sign-up">Sign Up</a>
                </li>
        
                <% } %>
            </ul>
        </div>
    </nav>
</header>